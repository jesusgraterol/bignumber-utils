{
  "name": "bignumber-utils",
  "version": "1.0.0",
  "description": "The bignumber-utils package empowers developers to effortlessly perform accurate and reliable decimal and non-decimal arithmetic in JavaScript, leveraging the robust foundation of the bignumber.js library.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "start": "ts-lib-builder --tsconfig=tsconfig.build.json",
    "test": "echo \"Error: tests are executed with  npm run test:unit\" && exit 1",
    "test:unit": "vitest run --config vitest.test-unit.config.ts",
    "watch-test:unit": "vitest --config vitest.test-unit.config.ts",
    "test:bench": "vitest bench"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jesusgraterol/bignumber-utils.git"
  },
  "keywords": [
    "bignumber",
    "precision",
    "accuracy",
    "numbers",
    "number",
    "number-management",
    "calculator",
    "decimals",
    "arithmetics",
    "utils",
    "utilities"
  ],
  "author": "Jesus Graterol",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jesusgraterol/bignumber-utils/issues"
  },
  "homepage": "https://github.com/jesusgraterol/bignumber-utils#readme",
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "ts-lib-builder": "^1.0.3",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "bignumber.js": "^9.1.2",
    "error-message-utils": "^1.1.0"
  }
}
